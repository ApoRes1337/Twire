<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingTop="@dimen/chat_message_margin"
    android:paddingBottom="@dimen/chat_message_margin"
    android:background="?android:attr/selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:textColor="@color/black"
        android:id="@+id/txtMessage"
        android:paddingRight="@dimen/chat_recyclerview_padding"
        android:paddingLeft="@dimen/chat_recyclerview_padding"
        android:textSize="@dimen/chat_message_text_sie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ImageButton
        android:id="@+id/message_button"
        android:clickable="true"
        android:alpha="0"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</RelativeLayout>